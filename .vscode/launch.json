{
    "version": "0.2.0",
    "configurations": [
      {
          "name": "Debug E2E Tests Server",
          "type": "node",
          "runtimeVersion": "20.18.1",
          "request": "launch",
          "runtimeArgs": [
            "--inspect-brk"
          ],
          "cwd": "${workspaceFolder}/e2e-tests-server",
          "program": "${workspaceFolder}/node_modules/.bin/jest",
          "args": [
            "--runInBand",
            "--config",
            "./jest.config.mjs",
            "--detectOpenHandles",
            "--forceExit"
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen",
          "env": {
            "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
          },
          "windows": {
            "program": "${workspaceFolder}/node_modules/jest/bin/jest"
          }
      },
      {
        "name": "Debug Integration Tests",
        "type": "node",
        "runtimeVersion": "20.18.1",
        "request": "launch",
        "runtimeArgs": [
          "--inspect-brk"
        ],
        "cwd": "${workspaceFolder}/integration-tests",
        "program": "${workspaceFolder}/node_modules/.bin/jest",
        "args": [
          "--runInBand",
          "--config",
          "./jest.config.mjs",
          "--detectOpenHandles",
          "--forceExit"
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "env": {
          "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
        },
        "windows": {
          "program": "${workspaceFolder}/node_modules/jest/bin/jest"
        }
      },
      {
        "name": "Debug Top Addresses Balance",
        "type": "node",
        "runtimeVersion": "20.18.1",
        "request": "launch",
        "runtimeArgs": [
          "--inspect-brk",
          "-r",
          "ts-node/register"
        ],
        "cwd": "${workspaceFolder}/examples/top-addresses-balance",
        "program": "${workspaceFolder}/examples/top-addresses-balance/src/main.ts",
        "envFile": "${workspaceFolder}/examples/top-addresses-balance/.env",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "env": {
          "TS_NODE_PROJECT": "${workspaceFolder}/examples/top-addresses-balance/tsconfig.json"
        },
      }
    ]
}
  