{
  "name": "bitcoin",
  "version": "0.0.0",
  "description": "",
  "author": "Yaroslav Pavliuk",
  "license": "AGPL-3.0-only",
  "private": true,
  "packageManager": "yarn@4.5.0",
  "type": "commonjs",
  "workspaces": {
    "packages": [
      "examples/*/*",
      "package",
      "e2e-tests-server",
      "integration-tests"
    ]
  },
  "scripts": {
    "clear": "lerna run clear:dist --concurrency 4 --stream && lerna run clear:node_modules --concurrency 4 --stream && rimraf node_modules && yarn cache clean --all",
    "clear:node_modules": "lerna run clear:node_modules --concurrency 4 --stream && rimraf node_modules",
    "clear:dist": "lerna run clear:dist --concurrency 4 --stream",
    "build:cjs": "tsc -b package/tsconfig.cjs.json",
    "build:esm": "lerna run build:esm --concurrency 4 --stream",
    "build": "yarn build:cjs && yarn build:esm",
    "test:unit": "lerna run test:unit --concurrency 1 --stream",
    "test:e2e": "lerna run test:e2e --concurrency 1 --stream",
    "test:integration": "lerna run test:integration --concurrency 1 --stream",
    "lint": "lerna run lint --concurrency 4 --stream",
    "lint:fix": "lerna run lint:fix --concurrency 4 --stream",
    "prepare": "husky install",
    "pre-commit": "lerna run lint --concurrency 4 --stream && lerna run docs:check --concurrency 4 --stream",
    "pre-push": "lerna run test:unit --concurrency 1 --stream",
    "commit": "cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1 -k lerna.json",
    "docs:website:generate": "lerna run docs:website:generate --concurrency 4 --stream",
    "docs:development:generate": "typedoc"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.26.0",
    "@lerna-lite/cli": "4.7.2",
    "@lerna-lite/publish": "4.7.2",
    "@lerna-lite/run": "4.7.2",
    "@lerna-lite/version": "4.7.2",
    "@typescript-eslint/eslint-plugin": "8.32.0",
    "@typescript-eslint/parser": "8.32.0",
    "commitizen": "4.3.0",
    "conventional-changelog-cli": "5.0.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.26.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.0",
    "husky": "8.0.3",
    "prettier": "3.1.1",
    "rimraf": "5.0.5",
    "typedoc": "0.25.6",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
